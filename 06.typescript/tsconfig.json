{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "emitBOM": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types/**"
    ],
    "types": [
      "react",
      "react-dom"
    ],
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ],
    "paths": {
      "~/*": [ "src/*" ],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
}